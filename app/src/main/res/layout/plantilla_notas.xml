<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imvMateria"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/flask"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/lblMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quimica"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imvMateria"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/lblDescripcionNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="II semestre"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imvMateria"
        android:layout_below="@+id/lblMateria"
        />

    <TextView
        android:id="@+id/lblNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/imvStatus"
        />

    <ImageView
        android:id="@+id/imvStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/check"
        />


</RelativeLayout>